<% if signed_in? %>
  <% if current_user.following.any?%>
    <div class="ui container">
      <% if @followings.any? {|follow| follow.user.projects == []} %>
        <h4 class="ui grey center aligned header">Looks like people you followed haven't posted any projects.</h4>
      <% else %>
        <div class="ui three column doubling stackable masonry grid">
          <% @followings.each do |follow|%>
            <% follow.user.projects.each do |project| %>
              <div class="column">
                <div class="ui card">
                  <% if project.photo_url.present?%>
                  <div class="image">
                    <%=image_tag(project.photo_url)%>
                  </div>
                  <% end %>
                  <div class="content">
                    <%=link_to "#{project.title}", user_project_path(project.user.id, project.id), class: 'header'%>
                    <% if project.thoughts.present? %>
                      <div class="meta">
                        <%=project.thoughts.count%> thoughts.
                      </div>
                    <% end %>
                    <div class="description">
                      <%=sanitize project.description%>
                    </div>
                  </div>
                  <div class="extra content">
                    <%=link_to user_path(project.user.id) do %>
                      <i class="user icon"></i>
                      <%=project.user.name%>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="ui container">
      <h4 class="ui grey center aligned header">Looks like you are not following anyone.</h4>
    </div>
  <% end %>
<% end %>
