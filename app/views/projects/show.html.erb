<div class="ui container text" style="padding-bottom: 3em;">
  <div class="ui fluid card">
    <div class="content">
      <div class="content">
        <i class="ellipsis grey horizontal icon"></i>
      </div>
      <div class="ui divider hidden"></div>
      <span class="right floated">
        <%=link_to "#{@user.name}", user_path(@user.id)%>
        <%=image_tag(@user.avatar_url, class: 'ui image avatar')%>
      </span>
      <div class="left floated">
        <h1 class="header"><%=@project.title%> </h1>
      </div>
    </div>
    <% if @project.photo.present?%>
    <div class="image" style='margin:1em;'>
      <%=image_tag(@project.photo_url, class:'ui image rounded')%>
    </div>
    <% end %>
    <div class="content">
      <div class="ui header tiny grey">
        Created <%=local_time_ago(@project.created_at.strftime('%b %e, %l:%M %p'))%>.
      </div>
      <p class="description"><%=sanitize @project.description%></p>
      <div class="ui labeled button" tabindex="0">
        <% if current_user.id != @user.id %>
          <% if current_user.like?(@project) %>
            <%=link_to user_project_like_path(@user.id, @project.id, @like.id), method:'DELETE', remote: true, class:'ui teal button like-button' do %>
              <i class="heart icon"></i> Liked!
            <% end %>
          <% else %>
            <%=link_to user_project_likes_path(@user.id, @project.id), method:'POST', remote: true, class:'ui teal button like-button' do %>
              <i class="heart icon"></i> Like
            <% end %>
          <% end %>
          <a class="ui basic teal left pointing label likes-count">
            <%=@project.likes.count%>
          </a>
        <% end %>
      </div>
    </div>
  </div>
  <div class="ui fluid card">
    <% if current_user.id == @user.id %>
      <div class="content">
        <%=form_with(scope: :thought, url: user_project_thoughts_path(@user.id, @project.id), method: 'post', id:'thought_form', class: 'ui form') do |f| %>
          <div class="inline field">
            <%=f.text_area :content, placeholder: "Add a thought", rows: 2, required: true%>
            <br/>
            <br/>
            <%=f.submit "Send", class: 'ui button'%>
          </div>
        <% end %>
      </div>
    <% end %>
    <div class="thoughts-timeline content">
      <% if @project.thoughts.present? %>
        <%= render 'thoughts/timeline' %>
      <% else %>
        <%= render 'thoughts/no_thoughts' %>
      <% end %>
    </div>
  </div>
</div>
